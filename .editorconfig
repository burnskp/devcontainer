root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.{sh,bash}]
indent_style = space
indent_size = 2
binary_next_line = true
space_redirects = true
switch_case_indent = true
simplify = true

[*.zsh]
indent_style = space
indent_size = 2

[*.lua]
indent_style = space
indent_size = 2

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.{json,jsonc}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[Dockerfile]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab

[*.conf]
indent_style = space
indent_size = 2

[.gitignore]
insert_final_newline = true
