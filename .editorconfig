root = true

[*]
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true

[Makefile]
indent_style = tab

[bin/*,*.zsh]
binary_next_line   = true
space_redirects    = true
switch_case_indent = true

[containers/dev/config/zsh/*]
binary_next_line   = true
space_redirects    = true
switch_case_indent = true
